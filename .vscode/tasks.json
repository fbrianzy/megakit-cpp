{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake: configure+build (Release)",
      "type": "shell",
      "command": "cmake -S . -B build -DCMAKE_BUILD_TYPE=Release && cmake --build build -j",
      "group": "build",
      "problemMatcher": ["$gcc", "$msCompile"]
    },
    {
      "label": "CTest: run tests",
      "type": "shell",
      "command": "ctest --test-dir build --output-on-failure",
      "group": "test",
      "problemMatcher": []
    }
  ]
}
